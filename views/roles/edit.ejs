<%- include('../partials/header') %>

<h2>Editar Rol: <%= rol.nombre %></h2>
<form action="/roles/<%= rol.id %>?_method=PUT" method="POST">
  <label>Nombre:</label>
  <input type="text" name="nombre" value="<%= rol.nombre %>" required />
  <h3>Permisos:</h3>
  <div class="checkbox-group">
    <% permisos.forEach(p => { %>
      <label>
        <input type="checkbox" name="permisos" value="<%= p.id %>" 
          <%= idsAsignados.includes(p.id.toString()) ? 'checked' : '' %> />
        <%= p.nombre %>
      </label>
    <% }) %>
  </div>
  <button type="submit">Actualizar</button>
</form>
<a href="/roles">Volver</a>

<%- include('../partials/footer') %>
